<script type="text/javascript">
    var slideIndex = 1;
    showSlides(slideIndex);

    function plusSlides(n) {
        showSlides(slideIndex += n);
    }

    function currentSlide(n) {
        showSlides(slideIndex = n);
    }

    function showSlides(n) {
        var i;
        var slides = document.getElementsByClassName("mySlides");
        var dots = document.getElementsByClassName("demo");
        var captionText = document.getElementById("caption");
        if (n > slides.length) { slideIndex = 1 }
        if (n < 1) { slideIndex = slides.length }
        for (i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }
        for (i = 0; i < dots.length; i++) {
            dots[i].className = dots[i].className.replace(" active", "");
        }
        slides[slideIndex - 1].style.display = "block";
        dots[slideIndex - 1].className += " active";
        captionText.innerHTML = dots[slideIndex - 1].alt;
    }

    $(document).ready(function () {
        const $smallImg = $('div#modalsmallImg');
        const $largeImg = $('div#modalLargeImg');
        const $allImg = $('#all-img div.columnB');
        const urlPage = window.location.href;
        
        $('.idName').click((e) => {
            e.preventDefault();
            let count = 0;
            var parent = e.target.getAttribute("data-id").replace(/myDiv/, '');
            var numberImg = $('#all-img').children('.' + parent);

            $smallImg.children('div.columnB').remove();
            $largeImg.children().remove();

            $allImg.each((index, el) => {
                let dataID = el.getAttribute('class').split(' ')[1];
                if (dataID == parent) {
                    $smallImg.append(el);
                    let uio = `<div class="mySlides" style="${(count++ == 0) ? 'display: block;' : ''}"><div class="numbertext">${count} / ${numberImg.length}</div><img class="img-large" src="${urlPage.slice(0, urlPage.lastIndexOf('/')) + el.childNodes[1].getAttribute('src')}"></div>`;
                    $largeImg.append(uio);
                }
            });
            const actionLink = `<a class="prev" onclick="plusSlides(-1)">❮</a><a class="next" onclick="plusSlides(1)">❯</a><div class="caption-container"><p id="caption"></p></div>`;
            $largeImg.append(actionLink);
            $smallImg.children('div.columnB:first').children().trigger("click");
        });
    });
</script>
